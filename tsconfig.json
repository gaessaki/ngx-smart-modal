{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@app/services": [
        "src/app/_services"
      ],
      "@app/services/*": [
        "src/app/_services/*"
      ],
      "@app/modules": [
        "src/app/_modules"
      ],
      "@app/modules/*": [
        "src/app/_modules/*"
      ],
      "@app/directives": [
        "src/app/_directives"
      ],
      "@app/directives/*": [
        "src/app/_directives/*"
      ],
      "@app/models": [
        "src/app/_models"
      ],
      "@app/models/*": [
        "src/app/_models/*"
      ],
      "@app/pipes": [
        "src/app/_pipes"
      ],
      "@app/pipes/*": [
        "src/app/_pipes/*"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false
  }
}
